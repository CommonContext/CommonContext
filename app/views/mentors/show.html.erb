<article class="xviews xmentors xshow container row">
	<% if current_user && user_type == "mentor" && get_user.id == @mentor.id %>
	<section class="col s5">
			<%= render 'mentor_profile' %>
		</section>
		<section class="col s7 center">
      <%= link_to "Create Appointment", new_mentor_appointment_path(@mentor) %>
		<% if @mentor.appointments.any? %>
			<h3>Upcoming Appointments</h3>
			<% @mentor.appointments.each do |appointment| %>
				<ul>
					<li>
						<%= link_to "#{appointment.datetime}", mentor_appointment_path(id: appointment.id, mentor_id: @mentor.id) %> <%# We should be able to clean this up.%>

					</li>
				</ul>

			<% end %>
	<!-- put else inside cone when uncommenting <%  %> -->
			<h3>View pending matches</h3>
			<!-- maybe something here to show pending matches that need scheduling confirmation -->
		<% end %>
	</section>
	<% else %>
	<p> This profile is private. </p>
	<% end %>
</article>

